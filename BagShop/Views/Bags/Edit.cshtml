@using BagShop.Models.Models.Bags
@model EditBagModel
@{
    ViewData["Title"] = "Edit";
}
<h2 class="text-center">Edit Bag</h2>
<div class="col-md-12 edit">
    <div class="col-md-8 col-md-offset-2">
        <form method="post" class="form-horizontal">
            <input value="@Model.BagId" type="hidden" name="BagId" />
            <div class="form-group">
                <label asp-for="@Model.Title" class="col-md-3"></label>
                <div class="col-md-9">
                    <input asp-for="@Model.Title" min="0" class="form-control" value="@(Model.Title)" />
                </div>
                <span asp-validation-for="@Model.Title" class="col-md-9 col-md-offset-3 text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Color" class="col-md-3"></label>
                <div class="col-md-9">
                    <input asp-for="@Model.Color" min="0" class="form-control" value="@(Model.Color)" />
                </div>
                <span asp-validation-for="@Model.Color" class="col-md-9 col-md-offset-3 text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Price" class="col-md-3"></label>
                <div class="col-md-9">
                    <input asp-for="@Model.Price" min="0" class="form-control" value="@(Model.Price)" />
                </div>
                <span asp-validation-for="@Model.Price" class="col-md-9 col-md-offset-3 text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Quantity" class="col-md-3"></label>
                <div class="col-md-9">
                    <input asp-for="@Model.Quantity" min="0" class="form-control" placeholder="0-100" value="@Model.Quantity" />
                </div>
                <span asp-validation-for="@Model.Quantity" class="col-md-9 col-md-offset-3 text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description" class="col-md-3"></label>
                <div class="col-md-9">
                    <textarea asp-for="@Model.Description" class="form-control">@Model.Description</textarea>
                </div>
                <span asp-validation-for="@Model.Description" class="col-md-9 col-md-offset-3 text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ImageUrl" class="col-md-3"></label>
                <div class="col-md-9">
                    <input asp-for="@Model.ImageUrl" class="form-control" value="@Model.ImageUrl" />
                </div>
                <span asp-validation-for="@Model.ImageUrl" class="col-md-9 col-md-offset-3 text-danger"></span>
            </div>
            <div>
                <a asp-controller="Bags" asp-action="All" class="btn btn-primary text-left">Back</a>
                <input type="submit" value="Edit" class="btn btn-warning text-right editButton" />
            </div>
        </form>
        <div asp-validation-summary="All" class="col-md-9 col-md-offset-3 text-danger"></div>
    </div>
</div>

